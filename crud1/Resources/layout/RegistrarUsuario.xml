<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
     android:layout_margin="40dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="REGISTRARSE"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtviewRegistrar" />
     <ImageView
        android:src="@drawable/registrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView1" />

    <EditText
        android:hint="Usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtNuevoUsuario" />

    <EditText
        android:hint="ContraseÃ±a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/txtNuevaClaveUsuario" />
    <Button
        android:text="CREAR NUEVO USUARIO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        android:id="@+id/btnRegistrarUsuarioNuevo" 
        android:onClick="BtnRegistrarUsuario_Click"/>
</LinearLayout>