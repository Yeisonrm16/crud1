<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Toolbar
        android:title="MENÚ"
        android:minHeight="?android:attr/actionBarSize"
        android:background="?android:attr/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbarMenu"
        android:layout_marginBottom="34.0dp" />
    <ImageView
        android:src="@drawable/universidad"
        android:layout_width="wrap_content"
        android:layout_height="226.5dp"
        android:id="@+id/imageView1" /> 

    <TextView
        android:text="MISIÓN"
        android:textAppearance="?android:attr/textAppearanceLarge"
         android:background="?android:attr/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:id="@+id/textView1" />

    <TextView
        android:text="Brindar un servicio de calidad a nuestra comunidad 
estudiantil, enseñando valores y liderazgo para el futuro"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3" />

     <TextView
        android:text="VISIÓN"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="?android:attr/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:id="@+id/textView2" />

     <TextView  
        android:text="Convertirnos en una universidad de calidad con valores 
 y personalidad logrando grandes reconocimientos a nivel mundial"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4" />
    <ImageView
        android:src="@drawable/campus"
        android:layout_width="wrap_content"
        android:layout_height="226.5dp"
        android:id="@+id/imageView2" /> 

</LinearLayout>